@model DemoProjectWeb.Models.Student
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_loggedin.cshtml";
}

@if( Model != null)
            {
                <h1> @Model.Name </h1>
            }

<h2>Create</h2>
<form action="/Student/Create" method="POST">
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control">
    @Html.ValidationMessageFor(Model => Model.Name, "", new { @class = "text-danger" })
    <input type="text" name="Id" value="@Model.Id" placeholder="Id" class="form-control">
    @Html.ValidationMessageFor(Model => Model.Id, "", new { @class = "text-danger" })
    <input type="text" name="Dob" value="@Model.Dob" placeholder="Date of Brith" class="form-control">
    @Html.ValidationMessageFor(Model => Model.Dob, "", new { @class = "text-danger" })
    <input type="text" name="Email" value="@Model.Email" placeholder="Email" class="form-control">
    @Html.ValidationMessageFor(Model => Model.Email, "", new { @class = "text-danger" })
    <input type="submit" value="Submit">
</form>

